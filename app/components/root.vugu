<!-- {{end}} -->
<meta charset="utf-8"/>

<meta vg-if='c.MetaDescription!=""' name="description" :content="c.MetaDescription"/>

<!-- {{if .MetaTags}}{{range $k, $v := .MetaTags}} -->
